<script>
    jQuery(document).ready(function() {
        $('.delete').on('click', function(e) {
            e.preventDefault();

            var $el = $(this).closest('#item');

            $.ajax({
                url: $(this).data('url'),
                method: 'DELETE'
            }).done(function() {
                $el.fadeOut();
            });
        });
    });
</script>